{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "noEmitOnError": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/config"]
}
